# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def sortList(self, head: Optional[ListNode]) -> Optional[ListNode]:
        l = list()
        temp = head
        if head==None:
            return None
        while temp!=None:
            l.append(temp)
            temp=temp.next
        
        l = sorted(l, key=lambda x: x.val)
        n = len(l)
        for i in range(0,n-1):
            l[i].next = l[i+1]
        l[n-1].next = None
        return l[0]
